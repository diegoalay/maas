<div>
  <b-navbar toggleable="lg" class="top-navbar" variant="default">
    <b-navbar-brand href="#">Maas Solutions</b-navbar-brand>

    <b-navbar-toggle target="nav-collapse"></b-navbar-toggle>

    <b-collapse id="nav-collapse" is-nav>
      <% if current_user.admin? %>
        <b-navbar-nav>
          <b-nav-item-dropdown class="left-nav-item" text="Empleados" class="ml-5" right>
            <li>
              <%= navigation_vue_item("/users") do %>
                <i class="fas fa-bars"></i>
                &nbsp;
                <span> Listado </span>
              <% end %>
            </li>
            <li>
              <%= navigation_vue_item("/users/new") do %>
                <i class="fas fa-plus"></i>
                &nbsp;
                <span> Crear </span>
              <% end %>
            </li>
          </b-nav-item-dropdown>
        </b-navbar-nav>

        <b-navbar-nav>
          <b-nav-item-dropdown class="left-nav-item" text="Servicios" class="ml-5" right>
            <li>
              <%= navigation_vue_item("/services") do %>
                <i class="fas fa-bars"></i>
                &nbsp;
                <span> Listado </span>
              <% end %>
            </li>
            <li>
              <%= navigation_vue_item("/services/new") do %>
                <i class="fas fa-plus"></i>
                &nbsp;
                <span> Crear </span>
              <% end %>
            </li>
          </b-nav-item-dropdown>
        </b-navbar-nav>
      <% end %>

      <b-navbar-nav>
        <b-nav-item-dropdown class="left-nav-item" text="Turnos" right>
          <li>
            <%= navigation_vue_item("/working_weeks") do %>
              <i class="fas fa-bars"></i>
              &nbsp;
              <span> Listado </span>
            <% end %>
          </li>
        </b-nav-item-dropdown>
      </b-navbar-nav>


      <!-- Right aligned nav items -->
      <b-navbar-nav class="ml-auto">
        <b-nav-item-dropdown right>
          <template #button-content>
            <%= current_user.full_name %>
          </template>
          <li>
            <%= navigation_vue_item("/profile") do %>
              <i class="fa fa-user"></i>
              &nbsp;
              <span> Perfil </span>
            <% end %>
          </li>
          <b-dropdown-item href="/sign_out">
              <i class="fas fa-sign-out-alt" ></i>
              <span> Salir </span>
          </b-dropdown-item>
        </b-nav-item-dropdown>
      </b-navbar-nav>
    </b-collapse>
  </b-navbar>
</div>